@using System.Globalization
@using ProjectManager.Application.SubContractors.Queries.GetSubContractorBasics

@model IEnumerable<SubContractorBasicsDto>

@{
    ViewData["Title"] = "Podwykonawcy";
    var locale = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@section Styles {
    <partial name="Styles/_DataTablesStyles" />
}

<partial name="Modals/_ModalConfirm"
         model="@(new ModalParams
         {
             Id = "modal-confirm-delete",
             Title = "Potwierdź proszę",
             Description = "Czy na pewno chcesz usunąć wybranego podwykonawcę?"
         })" />

<div class="card card-primary card-border-top">

    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
            <i class="fas fa-users-gear me-2"></i>Lista podwykonawców
        </h3>

        <a href="/SubContractor/AddSubContractor" class="btn btn-primary">
            <i class="fas fa-circle-plus me-1"></i>Dodaj podwykonawcę
        </a>
    </div>

    <div class="card-body">

        <table id="subContractors" class="table table-hover table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nazwa podwykonawcy</th>
                    <th>Osoba do kontaktu</th>
                    <th class="text-end desktop">Akcje</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var subContractor in Model)
                {
                    <tr>
                        <td>
                            <a class="edit-link fw-semibold"
                               href="/SubContractor/EditSubContractor?id=@subContractor.Id">
                                <i class="fas fa-building me-1 text-primary"></i>
                                @subContractor.Name
                            </a>
                        </td>

                        <td>
                            <i class="fas fa-user-tie me-1 text-secondary"></i>
                            @subContractor.ContactPerson
                        </td>

                        <td class="text-end">

                            <a class="btn btn-success btn-sm me-1"
                               href="/SubContractor/EditSubContractor?id=@subContractor.Id">
                                <i class="fas fa-pen-to-square me-1"></i>Edytuj
                            </a>

                            <button class="btn btn-danger btn-sm"
                                    onclick="deleteSubContractor('@subContractor.Id', this)">
                                <i class="fas fa-trash-can me-1"></i>Usuń
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

@section Scripts {
    <partial name="Scripts/_DataTablesScripts" />

    <script>

        let selectedRow;
        let selectedsubContractorId = 0;
        let subContractors;

        $(document).ready(function () {

            subContractors = $('#subContractors').DataTable({
                paging: true,
                ordering: true,
                info: true,
                responsive: true,
                autoWidth: false,
                lengthChange: true,
                language: {
                    url: `/lib/datatables/lang/${'@locale'}.json`
                },
                order: [[0, "asc"]],
                columnDefs: [
                    { targets: -1, orderable: false }
                ]
            });

        });

        function deleteSubContractor(id, btn) {
            selectedRow = btn.closest('tr');
            selectedsubContractorId = id;
            $('#modal-confirm-delete').modal('show');
        }

        $('#modal-confirm-delete-btn').on('click', function () {

            $('#modal-confirm-delete').modal('hide');

            $.ajax({
                type: "POST",
                url: "/SubContractor/DeleteSubContractor",
                data: { id: selectedsubContractorId },
                dataType: "json",
                success: function (data) {
                    if (data.success) {
                        subContractors.row(selectedRow).remove().draw();
                        toastr.success('Podwykonawcy zostali zaktualizowani.');
                    } else {
                        toastr.error('Błąd. ' + data.message);
                    }
                },
                error: function () {
                    toastr.error('Błąd. Nie udało się usunąć wybranego podwykonawcy. Spróbuj ponownie lub skontaktuj się z administratorem.');
                }
            });

        });

    </script>
}
