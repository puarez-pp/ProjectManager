
@using System.Globalization
@using ProjectManager.Application.Clients.Queries.GetClientBasics

@model IEnumerable<ClientBasicsDto>

@{
    ViewData["Title"] = "Klienci";
    var locale = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@section Styles {
<partial name="Styles/_DataTablesStyles" />
}

<partial 
    name="Modals/_ModalConfirm"
    model="@(new ModalParams
    {
        Id = "modal-confirm-delete",
        Title = "Potwierdź proszę",
        Description = "Czy na pewno chcesz usunąć wybranąego klienta?"
    })" 
/>

<div class="card card-primary card-border-top">

    <div class="card-body">

        <a href='/Client/AddClient' class="btn btn-primary mb-3" role="button">
            <i class="fas fa-solid fa-circle-plus"></i>Dodaj klienta
        </a>

        <table id="clients" class="table table-bordered">
            <thead>
                <tr> 
                    <th>Nazwa klienta</th>
                    <th>Osoba do kontaktu</th>
                    <th class="desktop"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var client in Model)
                {
                    <tr>
                        <td>
                            <a class="edit-link" href='/Client/EditClient?id=@client.Id'>@client.Name</a>
                        </td>
                        <td>
                            @client.ContactPerson
                        </td>
                        <td>
                            <a class="btn btn-success btn-sm" role="button" href="/Client/EditClient?id=@client.Id">
                                <i class="fas fa-solid fa-pen-to-square"></i>Edytuj
                            </a>

                            <button class="btn btn-danger btn-sm" onclick="deleteClient('@client.Id', this)">
                                <i class="fas fa-solid fa-trash-can"></i>Usuń
                            </button>

                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</div>

@section Scripts {
<partial name="Scripts/_DataTablesScripts" />

<script>

    var selectedRow;
    var selectedClientId = 0;
    var clients;

    $(document).ready(function () {

        clients = $('#clients').DataTable({
            columnDefs: [
                    ],
            paging: true,
            ordering: true,
            info: true,
            responsive: true,
            autoWidth: false,
            lengthChange: true,
            language: {
                url: `/lib/datatables/lang/${'@locale'}.json`
            },
            order: [[0, "asc"]]
        });


    });

    function deleteClient(id, btn) {
        selectedRow = btn.parentNode.parentNode;
        selectedClientId = id;
        $('#modal-confirm-delete').modal('show');
    }

    $('#modal-confirm-delete-btn').on('click', function (e) {

        $('#modal-confirm-delete').modal('hide');

        $.ajax({
            type: "POST",
            url: "/Client/DeleteClient",
            data: {
                id: selectedClientId
            },
            success: function (data) {
                if (data.success) {
                    clients.rows(selectedRow).remove().draw();
                    toastr.success('Klienci zostali zaktualizowani.')
                } 
                else 
                    toastr.error('Błąd. ' + data.message);
            },
            error: function (data) {
                toastr.error('Błąd. Nie udało się usunąć wybranego klienta. Spróbuj ponownie lub skontaktuj sie z administratorem.');
            },
            dataType: "json"
        });

    });


</script>
}