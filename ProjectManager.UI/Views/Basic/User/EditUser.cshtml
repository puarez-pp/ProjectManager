@using System.Globalization
@using ProjectManager.Application.Users.Queries.GetEditUser
@using ProjectManager.Domain.Enums

@model EditUserVm

@{
    ViewData["Title"] =  "Edytowanie danych pracownika";
    var locale = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@section Styles {
<partial name="Styles/_DateTimeStyles" />
<partial name="Styles/_EditorStyles" />
<partial name="Styles/_SelectStyles" />
}

<partial name="Modals/_ModalChooseFile" />

<div class="card card-primary card-border-top">

    @using (Html.BeginForm("EditUser", "User"))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(x => x.User.Id)

        @Html.HiddenFor(x => x.UserFullPathImage)

        <div class="card-body">
                

            <div class="form-group">
                @Html.LabelFor(x => x.User.Email)
                @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control", placeholder="Wprowadź e-mail"})
                @Html.ValidationMessageFor(x => x.User.Email)
            </div> 

            <div class="form-group">
                @Html.LabelFor(x => x.User.Password)
                @Html.PasswordFor(x => x.User.Password, new { @class = "form-control", placeholder="Wprowadź hasło"})
                @Html.ValidationMessageFor(x => x.User.Password)
            </div> 

            <div class="form-group">
                @Html.LabelFor(x => x.User.ConfirmPassword)
                @Html.PasswordFor(x => x.User.ConfirmPassword, new { @class = "form-control", placeholder="Potwierdź hasło"})
                @Html.ValidationMessageFor(x => x.User.ConfirmPassword)
            </div> 

            <div class="form-group">
                @Html.LabelFor(x => x.User.FirstName)
                @Html.TextBoxFor(x => x.User.FirstName, new { @class = "form-control", placeholder="Wprowadź imię"})
                @Html.ValidationMessageFor(x => x.User.FirstName)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.User.LastName)
                @Html.TextBoxFor(x => x.User.LastName, new { @class = "form-control", placeholder="Wprowadź nazwisko"})
                @Html.ValidationMessageFor(x => x.User.LastName)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.User.PhoneNumber)
                @Html.TextBoxFor(x => x.User.PhoneNumber, new { @class = "form-control", placeholder="Wprowadź numer telefonu"})
                @Html.ValidationMessageFor(x => x.User.PhoneNumber)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.User.PositionId)

                <div class="select2-blue">

                    @Html.DropDownList("User.PositionId", Html.GetEnumSelectList<Position>(), null, htmlAttributes: new { @class="form-control select2-PositionId", style="width: 100%;" })
                    @Html.ValidationMessageFor(x => x.User.PositionId)
                </div>
            </div>

        </div>

        <div class="card-footer">
             <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-solid fa-circle-check"></i>Zapisz
            </button>

        </div>

    }

</div>


@section Scripts {

    <partial name="Scripts/_ValidationScriptsPartial" />
    <partial name="Scripts/_DateTimeScripts" />
    <partial name="Scripts/_EditorScripts" />
    <partial name="Scripts/_SelectScripts" />
    <script src="~/lib/inputmask/jquery.inputmask.bundle.min.js"></script>

    <script>

        var selectedFileBrowseId;

        $(document).ready(function() {

            $('.select2-PositionId').select2({
                theme: 'bootstrap-5'
            });


        });
    
    </script>
}