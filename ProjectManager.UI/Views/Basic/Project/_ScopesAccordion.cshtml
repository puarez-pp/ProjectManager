@using ProjectManager.Application.Projects.Queries.GetProject
@model GetProjectVm

<div class="accordion" id="scopesAccordion">

    @foreach (var scope in Model.Project.Scopes)
    {
        var scopeId = $"scope-{scope.Id}";

        <div class="accordion-item mb-3">
            <h2 class="accordion-header" id="heading-@scopeId">
                <button class="accordion-button collapsed" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse-@scopeId">
                    @scope.Description
                </button>
            </h2>

            <div id="collapse-@scopeId" class="accordion-collapse collapse">

                <div class="accordion-body">

                    <button class="btn btn-primary btn-sm mb-2 open-add-position-modal"
                            data-scope="@scope.Id">
                        <i class="fas fa-solid fa-circle-plus"></i>Dodaj pozycję
                    </button>

                    <div class="positions-list">

                        @foreach (var pos in scope.Positions)
                        {
                            var postsId = $"posts-{pos.Id}";
                            var posAccordionId = $"pos-acc-{pos.Id}";
                            var posCollapseId = $"pos-collapse-{pos.Id}";

                            <div class="accordion mb-2 position-wrapper @(pos.IsCompleted ? "completed" : "")"
                                 data-pos-id="@pos.Id">

                                <div class="accordion-item">

                                    <h2 class="accordion-header d-flex justify-content-between align-items-center"
                                        id="heading-@posAccordionId">

                                        <button class="accordion-button collapsed"
                                                type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#@posCollapseId">

                                            <div class="d-flex flex-column text-start">
                                                <div class="form-check form-switch mt-1">
                                                    <input asp-for="@pos.IsCompleted"
                                                           class="form-check-input isCompletedCb"
                                                           data-pos-id="@pos.Id"
                                                           id="isCompletedCb-@pos.Id" />
                                                    <label class="form-check-label" for="isCompletedCb-@pos.Id">
                                                        Zakończono
                                                    </label>
                                                </div>
                                                <span class="fw-bold position-title @(pos.IsCompleted ? "completed" : "")"
                                                      data-pos-id="@pos.Id">
                                                    @pos.Description
                                                </span> 
                                            </div>

                                            <i class="fas fa-chevron-down ms-3 accordion-icon"></i>
                                        </button>

                                        <button class="btn btn-success btn-sm open-edit-position-modal ms-2 m-2"
                                                data-position="@pos.Id"
                                                type="button">
                                            <i class="fas fa-solid fa-pen-to-square"></i>
                                        </button>

                                    </h2>

                                    <div id="@posCollapseId" class="accordion-collapse collapse">
                                        <div class="accordion-body">

                                            <div id="@postsId" class="mt-2">
                                                <div class="posts-container"></div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>


