@using ProjectManager.Application.Dictionaries
@using ProjectManager.Application.Projects.Queries.GetProject
@using ProjectManager.Infrastructure.Services
@model ProjectScopePositionDto
@{
    var posAccordionId = $"pos-acc-{Model.Id}";
    var posCollapseId = $"pos-collapse-{Model.Id}";
    var postsId = $"posts-{Model.Id}";
    var canDelete = User.IsInRole(RolesDict.Administrator);
}


<div class="accordion mb-2 position-wrapper @(Model.IsCompleted ? "completed" : "")"
     data-pos-id="@Model.Id">

    <div class="accordion-item">

        <h2 class="accordion-header d-flex justify-content-between align-items-center"
            id="heading-@posAccordionId">

            <button class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#@posCollapseId">

                <div class="d-flex flex-column text-start">
                    <div class="form-check form-switch mt-1">
                        <input asp-for="@Model.IsCompleted"
                               class="form-check-input isCompletedCb"
                               data-pos-id="@Model.Id"
                               id="isCompletedCb-@Model.Id" />
                        <label class="form-check-label text-muted smal" for="isCompletedCb-@Model.Id l">
                            Zakończono
                        </label>
                    </div>

                    <span class="fw-normal position-title @(Model.IsCompleted ? "completed" : "")"
                          data-pos-id="@Model.Id">
                        @Model.Description
                    </span>
                </div>
            </button>
        </h2>
        <div class="d-flex m-1 justify-content-end">
            <button class="btn btn-sm btn-outline-success open-edit-position-modal m-sm-1"
                    data-position="@Model.Id"
                    type="button">
                <i class="fas fa-pen-to-square"></i>
            </button>
            @if (canDelete)
            {
                <button class="btn btn-sm btn-outline-danger open-delete-position-confirm m-sm-1"
                        data-position="@Model.Id"
                        type="button">
                    <i class="fas fa-trash"></i>
                </button>
            }
        </div>

        <div id="@posCollapseId" class="accordion-collapse collapse">
            <div class="accordion-body">
                <div id="@postsId" class="mt-2">
                    <div class="posts-container">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
