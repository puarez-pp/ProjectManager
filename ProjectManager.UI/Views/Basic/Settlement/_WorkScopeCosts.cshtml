@model WorkScopeDto

<h6 class="text-secondary mb-2">
    <i class="bi bi-tag me-1"></i> Koszty
</h6>

<div class="d-flex justify-content-end mb-2">
    <button class="btn btn-primary btn-sm mb-2 open-add-offer"
            data-scope-id="@Model.Id"
            onclick="location.href='@Url.Action("AddCost", "Settlement", new { id = Model.Id })'">
        <i class="fas fa-circle-plus"></i> Dodaj koszt
    </button>
</div>

<table class="table table-sm align-middle">
    <thead>
        <tr>
            <th>Opis</th>
            <th>Status</th>
            <th>Ilość</th>
            <th>Jednostka</th>
            <th>Netto</th>
            <th>Razem</th>
            <th>Podwykonawca</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cost in Model.Costs.OrderBy(o => o.Order))
        {
            @await Html.PartialAsync("_WorkScopeCostRow", cost)
        }
    </tbody>
</table>
